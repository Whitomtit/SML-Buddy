{
  "name": "smlbuddy",
  "displayName": "SML Buddy",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smlbuddy.loadConfigFile",
        "title": "Load configuration file",
        "category": "SMLBuddy",
        "when": "workbenchState != empty"
      },
      {
        "command": "sml-buddy.loadConfigLink",
        "title": "Get configuration by url",
        "category": "SMLBuddy",
        "when": "workbenchState != empty"
      },
      {
        "command": "smlbuddy.searchCounterExample",
        "title": "Search for counter example",
        "category": "SMLBuddy",
        "when": "never"
      },
      {
        "command": "smlbuddy.copyCounterExample",
        "title": "Copy counter example to clipboard",
        "category": "SMLBuddy",
        "when": "never"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "smlbuddy.searchCounterExample",
          "when": "view == smlbuddyView && viewItem != function-verifying && viewItem =~ /function-.*$/"
        },
        {
          "command": "smlbuddy.copyCounterExample",
          "when": "view == smlbuddyView && viewItem == function-counter-example"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "smlbuddyView",
        "contents": "In order to use SMLByddy features, you can open a resource file or clone from a URL.\n[Open File](command:smlbuddy.loadConfigFile)\n[Clone Resource](command:command:sml-buddy.loadConfigLink)",
        "when": "workbenchState != empty && smlbuddy.configLoaded"
      },
      {
        "view": "smlbuddyView",
        "contents": "In order to use SMLByddy features, you have to open a workspace.\n[Open Workspace](command:vscode.openFolder)",
        "when": "workbenchState == empty"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "smlbuddy",
          "title": "SMLBuddy",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "smlbuddy": [
        {
          "id": "smlbuddyView",
          "name": "SMLBuddy"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "heap-js": "^2.5.0",
    "web-tree-sitter": "0.15.6",
    "z3-solver": "^4.13.0"
  }
}
